use cfinet213
go

create proc sp_delete_mjvrdef_by_ididx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTenantId decimal(21,0),
	@argId decimal(21,0) )
as
	declare @varTenantId CFINet213TenantIdGenSeq
	declare @varId CFINet213MajorVersionIdGen
	declare @varRevision int
	declare @retval int
	declare cursNormalmjvrdefIdIdx cursor local for
		select
			a102.tenantid as tenantid,
			a102.id as id,
			a102.revision as revision
		from cfinet213..mjvrdef as a102
		where
			a102.tenantid = @argTenantId
			and a102.id = @argId
	declare cursRestrictmjvrdefIdIdx cursor local for
		select
			a102.tenantid as tenantid,
			a102.id as id,
			a102.revision as revision
		from cfinet213..mjvrdef as a102
		where
			a102.tenantid = @argTenantId
			and a102.id = @argId
			and a102.tenantid = @secTenantId
begin
	exec sp_is_system_user @retval output, @argAuditUserId
	if( @retval = 1 )
	begin
		open cursNormalmjvrdefIdIdx
		fetch next from cursNormalmjvrdefIdIdx into
				@varTenantId,
				@varId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_mjvrdef @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varId,
						@varRevision
			fetch next from cursNormalmjvrdefIdIdx into
				@varTenantId,
				@varId,
				@varRevision
		end
		close cursNormalmjvrdefIdIdx
		deallocate cursNormalmjvrdefIdIdx
	end
	else begin
		open cursRestrictmjvrdefIdIdx
		fetch next from cursRestrictmjvrdefIdIdx into
				@varTenantId,
				@varId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_mjvrdef @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varId,
						@varRevision
			fetch next from cursRestrictmjvrdefIdIdx into
				@varTenantId,
				@varId,
				@varRevision
		end
		close cursRestrictmjvrdefIdIdx
		deallocate cursRestrictmjvrdefIdIdx
	end
end
go

quit
