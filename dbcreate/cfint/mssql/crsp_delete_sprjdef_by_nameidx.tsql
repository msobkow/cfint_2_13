use cfinet213
go

create proc sp_delete_sprjdef_by_nameidx(
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTenantId decimal(21,0),
	@argTopProjectId decimal(21,0),
	@argName varchar(64) )
as
	declare @varTenantId CFINet213TenantIdGenSeq
	declare @varId CFINet213SubProjectIdGen
	declare @varRevision int
	declare @retval int
	declare cursNormalsprjdefNameIdx cursor local for
		select
			a105.tenantid as tenantid,
			a105.id as id,
			a105.revision as revision
		from cfinet213..sprjdef as a105
		where
			a105.tenantid = @argTenantId
			and a105.topprojectid = @argTopProjectId
			and a105.safe_name = @argName
	declare cursRestrictsprjdefNameIdx cursor local for
		select
			a105.tenantid as tenantid,
			a105.id as id,
			a105.revision as revision
		from cfinet213..sprjdef as a105
		where
			a105.tenantid = @argTenantId
			and a105.topprojectid = @argTopProjectId
			and a105.safe_name = @argName
			and a105.tenantid = @secTenantId
begin
	exec sp_is_system_user @retval output, @argAuditUserId
	if( @retval = 1 )
	begin
		open cursNormalsprjdefNameIdx
		fetch next from cursNormalsprjdefNameIdx into
				@varTenantId,
				@varId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_sprjdef @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varId,
						@varRevision
			fetch next from cursNormalsprjdefNameIdx into
				@varTenantId,
				@varId,
				@varRevision
		end
		close cursNormalsprjdefNameIdx
		deallocate cursNormalsprjdefNameIdx
	end
	else begin
		open cursRestrictsprjdefNameIdx
		fetch next from cursRestrictsprjdefNameIdx into
				@varTenantId,
				@varId,
				@varRevision
		while ( @@fetch_status = 0 )
		begin
				exec sp_delete_sprjdef @argAuditClusterId,
						@argAuditUserId,
						@argAuditSessionId,
						@secClusterId,
						@secTenantId,
						@varTenantId,
						@varId,
						@varRevision
			fetch next from cursRestrictsprjdefNameIdx into
				@varTenantId,
				@varId,
				@varRevision
		end
		close cursRestrictsprjdefNameIdx
		deallocate cursRestrictsprjdefNameIdx
	end
end
go

quit
