use cfinet213
go

create proc sp_lock_mnvrdef
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTenantId decimal(21,0),
	@argId decimal(21,0)
as
	declare @permissionFlag int
	declare @isSystemUser int
begin
	exec sp_is_tenant_user @permissionFlag output, @secTenantId, 'UpdateMinorVersion', @argAuditUserId
	if( @permissionFlag = 0 )
	begin
		raiserror( 'Permission denied -- User not found in tenant TSecGroup for UpdateMinorVersion',
			15,
			1 )
	end
	exec sp_is_system_user @isSystemUser output, @argAuditUserId

	update cfinet213..mnvrdef
	set forcesynclock = forcesynclock + 1
	where
			tenantid = @argTenantId
		and id = @argId
	if @@rowcount != 1
	begin
		raiserror( 'Data collision detected -- primary key does not exist',
			15,
			1 )
	end

	if( @isSystemUser = 1 )
	begin
		select
			a104.createdby,
			convert( varchar, a104.createdat, 120 ) as createdat,
			a104.updatedby,
			convert( varchar, a104.updatedat, 120 ) as updatedat,
			a104.tenantid as tenantid,
			a104.id as id,
			a104.majorversionid as majorversionid,
			a104.safe_name as safe_name,
			a104.descr as descr,
			a104.revision as revision
		from cfinet213..mnvrdef as a104
		where
			a104.tenantid = @argTenantId
			and a104.id = @argId
	end
	else begin
		select
			a104.createdby,
			convert( varchar, a104.createdat, 120 ) as createdat,
			a104.updatedby,
			convert( varchar, a104.updatedat, 120 ) as updatedat,
			a104.tenantid as tenantid,
			a104.id as id,
			a104.majorversionid as majorversionid,
			a104.safe_name as safe_name,
			a104.descr as descr,
			a104.revision as revision
		from cfinet213..mnvrdef as a104
		where
			a104.tenantid = @argTenantId
			and a104.id = @argId
			and a104.tenantid = @secTenantId
	end
end
go

quit
