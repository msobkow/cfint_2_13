use cfinet213
go

create proc sp_read_mjvrdef_by_nameidx
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTenantId decimal(21,0),
	@argSubProjectId decimal(21,0),
	@argName varchar(64)
as
	declare @rc int
	declare @permissionFlag int
	declare @isSystemUser int
begin
	exec sp_is_tenant_user @permissionFlag output, @secTenantId, 'ReadMajorVersion', @argAuditUserId
	if( @permissionFlag = 0 )
	begin
		raiserror( 'Permission denied -- User not found in tenant TSecGroup for ReadMajorVersion',
			15,
			1 )
	end
	exec sp_is_system_user @isSystemUser output, @argAuditUserId

	if( @isSystemUser = 1 )
	begin
		select
			a102.createdby,
			convert( varchar, a102.createdat, 120 ) as createdat,
			a102.updatedby,
			convert( varchar, a102.updatedat, 120 ) as updatedat,
			a102.tenantid as tenantid,
			a102.id as id,
			a102.subprojectid as subprojectid,
			a102.safe_name as safe_name,
			a102.descr as descr,
			a102.revision as revision
		from cfinet213..mjvrdef as a102
		where
			a102.tenantid = @argTenantId
			and a102.subprojectid = @argSubProjectId
			and a102.safe_name = @argName
			and a102.tenantid = @secTenantId
	end
	else begin
		select
			a102.createdby,
			convert( varchar, a102.createdat, 120 ) as createdat,
			a102.updatedby,
			convert( varchar, a102.updatedat, 120 ) as updatedat,
			a102.tenantid as tenantid,
			a102.id as id,
			a102.subprojectid as subprojectid,
			a102.safe_name as safe_name,
			a102.descr as descr,
			a102.revision as revision
		from cfinet213..mjvrdef as a102
		where
			a102.tenantid = @argTenantId
			and a102.subprojectid = @argSubProjectId
			and a102.safe_name = @argName
			and a102.tenantid = @secTenantId
			and a102.tenantid = @secTenantId
	end
end
go

quit
