use cfinet213
go

create proc sp_read_tlddef_by_tenantidx
	@argAuditClusterId bigint,
	@argAuditUserId varchar(36),
	@argAuditSessionId varchar(36),
	@secClusterId bigint,
	@secTenantId bigint,
	@argTenantId decimal(21,0)
as
	declare @rc int
	declare @permissionFlag int
	declare @isSystemUser int
begin
	exec sp_is_tenant_user @permissionFlag output, @secTenantId, 'ReadTld', @argAuditUserId
	if( @permissionFlag = 0 )
	begin
		raiserror( 'Permission denied -- User not found in tenant TSecGroup for ReadTld',
			15,
			1 )
	end
	exec sp_is_system_user @isSystemUser output, @argAuditUserId

	if( @isSystemUser = 1 )
	begin
		select
			a106.createdby,
			convert( varchar, a106.createdat, 120 ) as createdat,
			a106.updatedby,
			convert( varchar, a106.updatedat, 120 ) as updatedat,
			a106.tenantid as tenantid,
			a106.id as id,
			a106.safe_name as safe_name,
			a106.descr as descr,
			a106.revision as revision
		from cfinet213..tlddef as a106
		where
			a106.tenantid = @argTenantId
			and a106.tenantid = @secTenantId
		order by TenantId desc,
			Id desc
	end
	else begin
		select
			a106.createdby,
			convert( varchar, a106.createdat, 120 ) as createdat,
			a106.updatedby,
			convert( varchar, a106.updatedat, 120 ) as updatedat,
			a106.tenantid as tenantid,
			a106.id as id,
			a106.safe_name as safe_name,
			a106.descr as descr,
			a106.revision as revision
		from cfinet213..tlddef as a106
		where
			a106.tenantid = @argTenantId
			and a106.tenantid = @secTenantId
			and a106.tenantid = @secTenantId
		order by TenantId desc,
			Id desc
	end
end
go

quit
