delimiter ////
create procedure cfinet213.sp_delete_tlddef_by_nameidx(
	argAuditClusterId bigint,
	argAuditUserId varchar(36),
	argAuditSessionId varchar(36),
	secClusterId bigint,
	secTenantId bigint,
	argTenantId bigint,
	argName varchar(64) )
not deterministic
modifies sql data
begin
	declare curRevision int;
	declare subret boolean;
	declare curTenantId bigint;
	declare curId bigint;
	declare done int default false;
	declare cur_nameidx cursor for
		select
			a106.tenantid as tenantid,
			a106.id as id,
			a106.revision as revision
		from cfinet213.tlddef as a106
		where
			a106.tenantid = argTenantId
		and a106.safe_name = argName;
	declare cur_nameidx_system cursor for
			select
			a106.tenantid as tenantid,
			a106.id as id,
					a106.revision as revision
			from cfinet213.tlddef as a106
			where
					a106.tenantid = argTenantId
		and a106.safe_name = argName;
	declare cur_nameidx_restricted cursor for
			select
			a106.tenantid as tenantid,
			a106.id as id,
					a106.revision as revision
			from cfinet213.tlddef as a106
			where
					a106.tenantid = argTenantId
		and a106.safe_name = argName
					and a106.TenantId = secTenantId;
	declare continue handler for not found set done = true;

	select cfinet213.sp_is_system_user( argAuditUserId ) into subret;
	if( subret )
	then
		open cur_nameidx_system;
		read_loop_nameidx_system: loop
			fetch cur_nameidx_system into
				curTenantId,
				curId,
				curRevision;
			if done then
				leave read_loop_nameidx_system;
			end if;
			call cfinet213.sp_delete_tlddef( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curId,
						curRevision );
		end loop;
		close cur_nameidx_system;
	else
		open cur_nameidx_restricted;
		read_loop_nameidx_restricted: loop
			fetch cur_nameidx_restricted into
				curTenantId,
				curId,
				curRevision;
			if done then
				leave read_loop_nameidx_restricted;
			end if;
			call cfinet213.sp_delete_tlddef( argAuditClusterId,
						argAuditUserId,
						argAuditSessionId,
						secClusterId,
						secTenantId,
						curTenantId,
						curId,
						curRevision );
		end loop;
		close cur_nameidx_restricted;
	end if;
end;////
